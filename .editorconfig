# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
